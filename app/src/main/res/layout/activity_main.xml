<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jcolladosp.pruebastripe.MainActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="PAY"
        android:id="@+id/b_pay"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/checkTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/bFill" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILL"
        android:id="@+id/bFill"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Colored" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edPrice"
        android:layout_below="@+id/ivLogoStripe"
        android:layout_toRightOf="@+id/checkTV"
        android:layout_alignRight="@+id/ivLogoStripe"
        android:layout_alignEnd="@+id/ivLogoStripe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price (â‚¬)"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/edPrice"
        android:layout_alignLeft="@+id/b_pay"
        android:layout_alignStart="@+id/b_pay" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/ivLogoStripe"
        android:src="@drawable/logo_stripe"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />
</RelativeLayout>
